@model FindLostThings.Models.Product

@{
    ViewBag.Title = "Delete";
}
<!-- from 6-86 replace code -->
<!-- alert dialog -->
<div class="alert alert-dismissible alert-danger">
    <!-- alert-danger -->
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h3 class="alert-heading">Are you sure you want to delete this!</h3>
    <p class="mb-0">Once you delte this. It can't be retrive.</p>
</div>


<div class="card">

    <div class="card-header">
        <h2>Delete Item</h2>
    </div>

    <div class="card-body">

        <div class="row">

            <!-- user info-->
            <div class="card border-danger">
                <div class="card-header"> <h4> User Info </h4> </div>
                <div class="card-body">
                    <table class="table">

                        <tr>
                            <th class="bg-primary">@Html.DisplayNameFor(model => Model.userId)</th>
                            <td style="background-color:golden;">@Html.DisplayFor(modelItem => Model.userId)</td>
                        </tr>
                        <tr>
                            <th class="bg-primary">@Html.DisplayNameFor(model => Model.itemType)</th>
                            <td style="background-color:golden;">@Html.DisplayFor(modelItem => Model.itemType)</td>
                        </tr>
                        <tr>
                            <th class="bg-primary">@Html.DisplayNameFor(model => Model.postalCode)</th>
                            <td style="background-color:golden;">@Html.DisplayFor(modelItem => Model.postalCode)</td>
                        </tr>

                    </table>
                </div>
            </div>


            <!-- Product info-->
            <div class="card border-danger">
                <div class="card-header"> <h4> Product Info </h4> </div>
                <div class="card-body">
                    <table class="table">

                        <tr>
                            <th class="bg-primary">@Html.DisplayNameFor(model => Model.productName)</th>
                            <td>@Html.DisplayFor(modelItem => Model.productName)</td>
                        </tr>
                        <tr>
                            <th class="bg-primary">@Html.DisplayNameFor(model => Model.manufacturer)</th>
                            <td>@Html.DisplayFor(modelItem => Model.manufacturer)</td>
                        </tr>
                        <tr>
                            <th class="bg-primary">@Html.DisplayNameFor(model => Model.model)</th>
                            <td>@Html.DisplayFor(modelItem => Model.model)</td>
                        </tr>
                        <tr>
                            <th class="bg-primary">@Html.DisplayNameFor(model => Model.color)</th>
                            <td>@Html.DisplayFor(modelItem => Model.color)</td>
                        </tr>

                    </table>
                </div>
            </div>


            <!-- details -->
            <div class="card border-danger">
                <div class="card-header"> <h4> User Info </h4> </div>
                <div class="card-body">
                    <table class="table">

                        <tr>
                            <th class="bg-primary">@Html.DisplayNameFor(model => Model.date)</th>
                            <td>@Html.DisplayFor(modelItem => Model.date)</td>
                        </tr>
                        <tr>
                            <th class="bg-primary">@Html.DisplayNameFor(model => Model.description)</th>
                            <td>@Html.DisplayFor(modelItem => Model.description)</td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>


    </div>

</div>






@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <p class="p-2"></p>
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("Back to List", "Index")
    </div>
}

