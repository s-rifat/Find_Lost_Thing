<!-- replace all-->

@model FindLostThings.Models.Product

@{
    ViewBag.Title = "Details";
}


<div class="card">

    <div class="card-header">
        <h2>Product Details</h2>
    </div>

    <div class="card-body">

        <div class="row">

            <!-- user info-->
            <div class="col-sm-4 border-primary">
                <div class="card-header bg-secondary text-white"> <h4> User Info </h4> </div>
                <div class="card-body">
                    <table class="table">

                        <tr>
                            <th class="bg-info">@Html.DisplayNameFor(model => Model.userId)</th>
                            <td style="background-color:golden;">@Html.DisplayFor(modelItem => Model.userId)</td>
                        </tr>
                        <tr>
                            <th class="bg-info">@Html.DisplayNameFor(model => Model.itemType)</th>
                            <td style="background-color:golden;">@Html.DisplayFor(modelItem => Model.itemType)</td>
                        </tr>
                        <tr>
                            <th class="bg-info">@Html.DisplayNameFor(model => Model.postalCode)</th>
                            <td style="background-color:golden;">@Html.DisplayFor(modelItem => Model.postalCode)</td>
                        </tr>

                    </table>
                </div>
            </div>


            <!-- Product info-->
            <div class="col-sm-4 border-primary">
                <div class="card-header bg-secondary text-white"> <h4> Product Info </h4> </div>
                <div class="card-body">
                    <table class="table">

                        <tr>
                            <th class="bg-info">@Html.DisplayNameFor(model => Model.productName)</th>
                            <td>@Html.DisplayFor(modelItem => Model.productName)</td>
                        </tr>
                        <tr>
                            <th class="bg-info">@Html.DisplayNameFor(model => Model.manufacturer)</th>
                            <td>@Html.DisplayFor(modelItem => Model.manufacturer)</td>
                        </tr>
                        <tr>
                            <th class="bg-info">@Html.DisplayNameFor(model => Model.model)</th>
                            <td>@Html.DisplayFor(modelItem => Model.model)</td>
                        </tr>
                        <tr>
                            <th class="bg-info">@Html.DisplayNameFor(model => Model.color)</th>
                            <td>@Html.DisplayFor(modelItem => Model.color)</td>
                        </tr>

                    </table>
                </div>
            </div>


            <!-- details -->
            <div class="col-sm-4 border-primary">
                <div class="card-header bg-secondary text-white"> <h4> Product Details </h4> </div>
                <div class="card-body">
                    <table class="table">

                        <tr>
                            <th class="bg-info">@Html.DisplayNameFor(model => Model.date)</th>
                            <td>@Html.DisplayFor(modelItem => Model.date)</td>
                        </tr>
                        <tr>
                            <th class="bg-info">@Html.DisplayNameFor(model => Model.description)</th>
                            <td>@Html.DisplayFor(modelItem => Model.description)</td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>


<div class="container">
    <p class="p-2"></p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.productId }) ||
    @Html.ActionLink("Back to List", "Index")
</div>

